                // Set the title and artist name in the edit form
                document.getElementById('edit-title').value = title;
                document.getElementById('edit-artist').value = artistName;

                // Show the image pop-up container
                document.getElementById('image-popup').style.display = 'block';
            }

            function editImage() {
                // Show the edit form
                document.getElementById('edit-form').style.display = 'block';
            }

            async function saveEdits() {
                // Get the edited values
                var newTitle = document.getElementById('edit-title').value;
                var newArtist = document.getElementById('edit-artist').value;

                // Get the imageId from somewhere
                var imageId = "your_image_id";

                // Send an AJAX request to update the image information
                const response = await fetch('/Image/UpdateImage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ imageId, title: newTitle, artistName: newArtist }),
                });

                if (response.ok) {
                    // Update the pop-up content with the new values

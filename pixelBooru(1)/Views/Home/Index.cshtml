@model List<pixelBooru_1_.Models.Artwork>

@{
    var sortedModel = Model.OrderByDescending(a => a.artId).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tiny Slider Example</title>

    <!-- Add Tiny Slider CSS to your head section -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css">

    <!-- Add Material Icons font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>

    <div class="home-main">
        <div class="home-gallery">
            <a class="nav-link" asp-area="" asp-controller="Artwork" asp-action=""><h2 class="header-1">MOST POPULAR </h2></a>
        </div>

        <div id="popularSlider" class="container-gallery-parent">
            <div class="slider-item">
                <img src="~/testImages/hp1.jpg" alt="Placeholder 1">
            </div>
            <div class="slider-item">
                <img src="~/testImages/hp2.jpg" alt="Placeholder 2">
            </div>
            <div class="slider-item">
                <img src="~/testImages/hp3.jpg" alt="Placeholder 3">
            </div>
            <div class="slider-item">
                <img src="~/testImages/hp4.jpg" alt="Placeholder 4">
            </div>
            <!-- Add more slider items with placeholder images as needed -->
        </div>
        <div class="home-gallery-side-div">


            <div class="home-gallery-left">
                <div class="home-gallery-1">
                    <a class="nav-link" asp-area="" asp-controller="Artwork" asp-action="Index"><h2 class="header-1">LATEST ARTWORKS </h2></a>
                </div>

                <div class="container-gallery-parent">
                    <div class="container-home-main-gallery1">
                        @{
                            for (int i = 0; i < Math.Min(sortedModel.Count, 2); i++)
                            {
                                <div class="container-home-image1">

                                    @if (sortedModel[i].artImg != null && sortedModel[i].artImg.Length > 0)
                                    {
                                        <div>
                                            <img src="data:img;base64, @Convert.ToBase64String(sortedModel[i].artImg)" alt="Artwork Image" class="card-img-top">
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png" alt="Artwork Image" class="card-img-top">
                                    }
                                </div>
                            }
                        }
                    </div>

                    <div class="container-home-main-gallery1">
                        @{
                            for (int i = 2; i < Math.Min(sortedModel.Count, 4); i++)
                            {
                                <div class="container-home-image1">
                                    @if (sortedModel[i].artImg != null && sortedModel[i].artImg.Length > 0)
                                    {
                                        <div>
                                            <img src="data:img;base64, @Convert.ToBase64String(sortedModel[i].artImg)" alt="Artwork Image" class="card-img-top">
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="https://konachan.net/sample/0227e2c804c98b3bed09e04d7a9ab972/Konachan.com%20-%20366551%20sample.jpg" alt="picture" />
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="home-gallery-right">
                <div class="home-gallery-1">
                    <a class="nav-link" asp-area="" asp-controller="Artist" asp-action="Index"><h2 class="header-1">ARTISTS </h2></a>
                </div>

                <div class="container-gallery-parent">
                    <div class="container-home-main-gallery">
                        <div class="container-home-image">
                            <img src="https://pbs.twimg.com/profile_images/1713470868335300608/TVjCpoGD_400x400.jpg" alt="怪獣" />

                        </div>

                    </div>

                    <div class="container-home-main-gallery">
                        <div class="container-home-image">
                            <img src="https://pbs.twimg.com/profile_images/1528460470717657088/_w_dr9Ll_400x400.jpg" alt=" hazuki gyokuto" />

                        </div>

                    </div>
                </div>
                <div class="container-gallery-parent">
                    <div class="container-home-main-gallery">
                        <div class="container-home-image">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPoj2DU_xmylKPRUcr6xRExnWVhXL-EeYkDg&usqp=CAU" alt="7PΞACH" />

                        </div>

                    </div>

                    <div class="container-home-main-gallery">
                        <div class="container-home-image">
                            <img src="https://pbs.twimg.com/profile_images/1560843065547702273/NMsEEktg_400x400.jpg" alt="るりまる" />

                        </div>

                    </div>
                </div>

            </div>

        </div>

        <div class="home-gallery-explore">

            <div class="home-gallery-3">
                <h2 class="header-1">EXPLORE </h2>
            </div>
            <div class="home-gallery-explore-1">
                <div class="home-gallery-3">
                    <a class="nav-link" asp-area="" asp-controller="Artwork" asp-action="Index"><h2 class="header-1">Genshin Impact </h2></a>
                </div>
                <div class="container-gallery-parent">
                    <div class="container-home-main-gallery2">
                        <div class="container-home-image2">
                            <img src="~/testImages/ganyu.jpg" alt="artist: BattlequeenYume" />

                        </div>

                    </div>

                    <div class="container-home-main-gallery2">
                        <div class="container-home-image2">
                            <img src="~/testImages/Kirara.jpg" alt="artist: BattlequeenYume" />

                        </div>

                    </div>

                    <div class="container-home-main-gallery2">
                        <div class="container-home-image2">
                            <img src="~/testImages/Klee.jpg" alt="artist: BattlequeenYume" />

                        </div>

                    </div>

                    <div class="container-home-main-gallery2">
                        <div class="container-home-image2">
                            <img src="~/testImages/clorinde.jpg" alt="artist: BattlequeenYume" />

                        </div>

                    </div>

                </div>

                <div class="home-gallery-explore-2">

                    <div class="home-gallery-3">
                        <a class="nav-link" asp-area="" asp-controller="Artwork" asp-action="Index"><h2 class="header-1">Original </h2></a>
                    </div>

                    <div class="container-gallery-parent">
                        <div class="container-home-main-gallery3">
                            <div class="container-home-image3">
                                <img src="~/testImages/drag.jpg" alt="picture" />

                            </div>

                        </div>

                        <div class="container-home-main-gallery3">
                            <div class="container-home-image3">
                                <img src="~/testImages/funeral.jpg" alt="picture" />

                            </div>

                        </div>

                        <div class="container-home-main-gallery3">
                            <div class="container-home-image3">
                                <img src="~/testImages/paladin.jpg" alt="picture" />

                            </div>

                        </div>

                        <div class="container-home-main-gallery3">
                            <div class="container-home-image3">
                                <img src="~/testImages/space.png" alt="picture" />

                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Add Tiny Slider JS to your body -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/min/tiny-slider.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Tiny Slider without controls
            var popularSlider = tns({
                container: '#popularSlider',
                items: 1,
                slideBy: 'page',
                autoplay: true,
                controlsText: ["", ""], // Set controlsText to an empty string to hide navigation buttons
            });
        });
    </script>
</body>
</html>
<!-- Views/Picture/Index.cshtml -->
@model PictureModel

<style>
    .profile-picture {
        width: 50px; /* Adjust the width and height as needed */
        height: 50px;
        border-radius: 50%; /* Make it a circle */
        object-fit: cover; /* Ensure the image covers the circle without stretching */
    }

    .comment-section {
        background-color: #333; /* Dark background color for existing comments */
        padding: 20px; /* Adjust padding as needed */
        border-radius: 10px; /* Optional: Add rounded corners */
        color: #fff; /* Set text color to white */
        margin-bottom: 20px; /* Add margin at the bottom */
    }

    .comment-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px; /* Adjust spacing between comment items */
        padding: 10px; /* Adjust padding as needed */
        border-radius: 5px; /* Optional: Add rounded corners */
    }

    .new-comment-section {
        background-color: #555; /* Darker background color for the new comment section */
        padding: 20px; /* Adjust padding as needed */
        border-radius: 10px; /* Optional: Add rounded corners */
        color: #fff; /* Set text color to white */
    }

    .new-comment {
        padding: 10px; /* Adjust padding as needed */
        border-radius: 5px; /* Optional: Add rounded corners */
    }

    .comment-text {
        margin-left: 10px; /* Adjust spacing between profile picture and comment text */
    }

    .bold-username {
        font-weight: bold; /* Make the username bold */
    }
</style>

<h1>Picture and Comment</h1>

<img src="@Url.Content(Model.ImageUrl)" alt="Picture" />

<div class="row">
    <div class="col-md-12">
        <div class="comment-section">
            <h2>Comment Section</h2>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                <ul>
                    @for (int i = 0; i < Model.Comments.Length; i++)
                    {
                        <li class="comment-item">
                            <img src="@Url.Content(Model.ProfilePictureUrl)" alt="Profile Picture" class="profile-picture" />
                            <div class="comment-text">
                                <span class="bold-username">@Html.Raw(Model.Username)</span>
                                <br />
                                <span>@Html.Raw(Model.Comments[i])</span>
                                <br />
                                <small>
                                    Posted on: @DateTime.Now.ToString("MM/dd/yyyy HH:mm:ss")
                                </small>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (!string.IsNullOrEmpty(Model.Comment))
        {
            <div class="new-comment-section">
                <div class="new-comment">
                    <img src="@Url.Content(Model.ProfilePictureUrl)" alt="Profile Picture" class="profile-picture" />
                    <div class="comment-text">
                        <span class="bold-username">@Html.Raw(Model.Username)</span>
                        <br />
                        <span>@Html.Raw(Model.Comment)</span>
                        <br />
                        <small>
                            Posted on: @DateTime.Now.ToString("MM/dd/yyyy HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<form asp-action="AddComment" method="post">
    <textarea id="comment" name="Comment" rows="4" cols="50"></textarea>
    <br />
    <button type="submit">Submit Comment</button>
</form>
